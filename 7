pragma solidity >= 0.5.0 < 0.9.0;

contract ArrayInsertion {
    int[] public contractStorage;
    function UserInputArray(int[] memory userInputArray) public {
        contractStorage = userInputArray;
    }
    function arrayInsertion(uint pos, int no) public {
        int[] memory tempArray = contractStorage;
        contractStorage = new int[](contractStorage.length + 1);
        for(uint i = 0; i < pos - 1; i++) {
            contractStorage[i] = tempArray[i];
        }
        
        contractStorage[pos - 1] = no;

        for(uint i = pos; i < contractStorage.length; i++) {
            contractStorage[i] = tempArray[i - 1];
        }    
    }
}
